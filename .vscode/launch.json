{
  "version": "0.2.0",
  "configurations": [
    {
      // Hierbei wird die Anwendung automatisch im Container gestartet
      "name": "Docker Debug with hot-reloading",
      "type": "docker",
      "request": "launch",
      "preLaunchTask": "Docker Debug with hot-reloading",
      "python": {
        "pathMappings": [
          {
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/app"
          }
        ],
        "projectType": "flask",
        "jinja": true,
        "justMyCode": true
      }
    }
  ]
}
