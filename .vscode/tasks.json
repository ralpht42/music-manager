{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "docker-build",
      "label": "docker-build-debug",
      "platform": "python",
      "dockerBuild": {
        "tag": "ghcr.io/ralpht42/music-manager:latest-dev",
        "dockerfile": "${workspaceFolder}/Dockerfile",
        "context": "${workspaceFolder}",
        "pull": true,
        "target": "debug"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "docker-run",
      "label": "Docker Run - Debug (no hot-reloading)",
      "dependsOn": ["docker-build-debug"],
      "dockerRun": {
        "image": "ghcr.io/ralpht42/music-manager:latest-dev",
        "containerName": "music-manager-dev",
        "envFiles": ["${workspaceFolder}/.env"],
        "volumes": [
          {
            "localPath": "${workspaceFolder}/data",
            "containerPath": "/app/data"
          }
        ]
      },
      "python": {
        "args": ["run", "--host", "0.0.0.0", "--port", "8080"],
        "module": "flask"
      }
    },
    {
      "label": "Docker Compose - Debug Up (no hot-reloading)",
      "type": "docker-compose",
      "dockerCompose": {
        "up": {
          "detached": false,
          "build": true
        },
        "files": [
          //"${workspaceFolder}/docker-compose.yml",
          "${workspaceFolder}/docker-compose.debug.yml"
        ]
      },
      "isBackground": true
    },
    {
      "label": "Docker Compose - Debug Down (no hot-reloading)",
      "type": "docker-compose",
      "dockerCompose": {
        "down": {
          "removeOrphans": true
        },
        "files": [
          //"${workspaceFolder}/docker-compose.yml",
          "${workspaceFolder}/docker-compose.debug.yml"
        ]
      }
    }
  ]
}
